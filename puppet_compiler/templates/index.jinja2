{% if mode == 'standard' %}
{% set change_msg = 'when the change is applied' %}
{% set fail_msg = 'have failed to compile completely' %}
{% set fail_hosts = state.fail %}
{% set ok_hosts = state.noop %}
{% else %}
{% set change_msg = 'with the ' + mode + ' parser' %}
{% set fail_msg = 'break with the current parser' %}
{% set fail_hosts = state.break %}
{% set ok_hosts = state.ok %}
{% endif %}
{% extends "base.jinja2" %}
{% block body %}
  <h1>Results for change <a href="https://gerrit.wikimedia.org/r/#/c/{{ chid }}/" target="_blank">{{ chid }}</a> with the {{ mode }} parser</h1>
  <div id="list">
    <h2>Hosts were compiled using puppet version {{ puppet_version }}</h2>
    <h2>Hosts that have no differences (or compile correctly only with the change)</h2>
    <ul>
      {% for host in ok_hosts|sort %}
        <li> <a href="{{ host }}/{{ page_name }}">{{ host }}</a>
      {% endfor %}
    </ul>
    <h2>Hosts that compile with differences</h2>
    <ul>
      {% for host in state.diff|sort %}
        <li> <a href="{{ host }}/{{ page_name }}">{{ host }}</a>
      {% endfor %}
    </ul>
    <h2>Hosts that fail to compile {{ change_msg }}</h2>
    <ul>
      {% for host in state.error|sort %}
        <li> <a href="{{ host }}/{{ page_name }}">{{ host }}</a>
      {% endfor %}
    </ul>
    <h2>Hosts that {{ fail_msg }}</h2>
    <ul>
      {% for host in fail_hosts|sort %}
        <li> <a href="{{ host }}/{{ page_name }}">{{ host }}</a>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
